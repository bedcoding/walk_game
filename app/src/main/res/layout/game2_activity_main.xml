                    android:orientation="horizontal"
                    android:layout_marginRight="10dp"

                    >
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/game_damage"
                        android:padding="5dp"
